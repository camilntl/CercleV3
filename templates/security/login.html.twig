{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="max-w-lg">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger bg-red-600 h-11 flex items-center justify-center text-white text-center">
					E-mail ou Mot de passe incorrect
				</div>
			{% endif %}
			<div class="w-screen flex place-content-center">
				<div class="px-10 space-y-8 h-screen flex flex-col justify-center">
					<div class="w-16">
						<img class=" h-full" src="images/logo.png"/>
					</div>
					<div>
						<h2 class="text-3xl text-purple-500 mb-2 font-bold">Content de vous revoir !</h2>
						<h2 class="text-3xl font-bold dark:text-purple-300">Connectez-vous</h2>
					</div>
					<div class="space-y-6">
						<div>
							<label class="block text-purple-700 dark:text-purple-300 mb-2 text-xs font-medium" for="inputEmail">Email</label>
							<input class="border-none rounded-full w-full p-3 text-sm text-lavande-500 bg-purple-200 focus:outline-none focus:shadow-outline placeholder-lavande-500 dark:bg-lavande-900 dark:border-lavande-900" placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div>
							<label class="block text-purple-700 dark:text-purple-300 mb-2 text-xs font-medium" for="inputPassword">Mot de passe</label>
							<input class="border-none rounded-full w-full p-3 text-sm text-lavande-500 bg-purple-200 focus:outline-none focus:shadow-outline placeholder-lavande-500 dark:bg-lavande-900 dark:border-lavande-900" placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							<a class="text-xs underline text-purple-700 dark:text-lavande-400" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div>
							<button class="bg-purple-500 py-3 px-8 rounded-full text-base mb-4 w-full text-white" type="submit">
								Se connecter
							</button>
							<p class="text-xs dark:text-purple-300">Vous n'avez pas de compte ?
								<a class="text-purple-500" href="{{ path('app_register') }}">Inscrivez-vous
								</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
